.row
  .large-12.columns
    %h1 Login to Movie Pong
.row
  .large-4.large-centered.columns
    -unless flash[:notice].nil?
      %p.alert-box.radius= flash[:notice]
    =form_tag '/login' do
      =label_tag 'username'
      =text_field_tag 'username', nil, :autofocus => true, :placeholder => "janedoe"
      =label_tag 'password'
      =password_field_tag 'password'
      =submit_tag 'Login to Movie Pong', :class => 'button radius'
