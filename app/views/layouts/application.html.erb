<!DOCTYPE html>
<html>
<head>
  <title>V2MoviePong</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render :partial => "layouts/header" %>
  <%= render :partial => "layouts/nav" %>
<%= yield %>
  <%= render :partial => "layouts/footer" %>

  <div id="myModal" class="reveal-modal medium">
    <h3 id= "modalText"></h3>
    <div id="modalScoreboard"><div class= "scoreboard"><%= render :partial => "layouts/scoreboard" %></div></div>
    <a href="/" class="button radius" id="play_again_btn">Play Again</a>

  </div>
</body>
</html>
